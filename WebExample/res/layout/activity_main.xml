<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent" android:layout_width="match_parent">
    <RelativeLayout
         android:id="@+id/relativeLayout1"
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:layout_alignParentTop="true"
         android:layout_alignParentLeft="true"
         android:gravity="top">
        
            <TextView
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ideal kilo hesaplama programı"
                android:id="@+id/textView1"
                android:layout_height="wrap_content">
            </TextView>
           
          <TextView
              android:layout_marginTop="32dp"
              android:layout_below="@+id/editText1"
              android:layout_width="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:text="Yaşınız:" android:id="@+id/textView4"
              android:layout_alignParentLeft="true"
              android:layout_height="wrap_content">
           </TextView>
          
        <EditText
           android:inputType="number"
           android:layout_alignBottom="@+id/textView4"
           android:id="@+id/editText2"
           android:layout_width="match_parent"
           android:layout_alignLeft="@+id/editText1"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/textView4">
        </EditText>
        <TextView
              android:layout_alignBottom="@+id/textView5"
              android:layout_width="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:text="...." android:id="@+id/textViewsonuc"
              android:layout="@+id/radioButton2"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@+id/textView5">
   </TextView>

        <EditText  
            android:layout_height="wrap_content"
             android:id="@+id/editText1"
             android:inputType="number"
             android:layout_width="match_parent"
             android:layout_below="@+id/rgCinsiyet"
             android:layout_marginTop="24dp"
             android:layout_toRightOf="@+id/textView5">
      </EditText>

      <TextView  
                android:id="@+id/textView3"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:text="Boyunuz:"
                android:layout_alignBottom="@+id/editText1"
                android:layout_alignParentLeft="true">
         </TextView>

                 <RadioGroup
                      android:layout_height="wrap_content"
                       android:id="@+id/rgCinsiyet"
                       android:orientation="vertical"
                       android:layout_below="@+id/textView1"
                       android:layout_centerHorizontal="true"
                       android:layout_width="wrap_content">

              <RadioButton
               android:layout_height="wrap_content"
                android:layout_width="wrap_content"
               android:text="Kadın"
               android:id="@+id/radioButton2">
          </RadioButton>

             <RadioButton
                    android:layout_height="wrap_content"
                    android:text="Erkek"
                   android:id="@+id/radioButton1"
                    android:layout_width="160dp">
             </RadioButton>
   </RadioGroup>

                 <TextView
                     android:id="@+id/textView5"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:layout_below="@+id/button1"
                     android:layout_marginTop="92dp"
                     android:text="Ideal Kilonuz:"
                     android:textAppearance="?android:attr/textAppearanceLarge" />

                 <Button
                     android:id="@+id/button1"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:layout_below="@+id/editText2"
                     android:layout_marginTop="66dp"
                     android:text="İdeal Kilo Hesapla" />

                 <TextView
                     android:id="@+id/widget80"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:layout_centerVertical="true"
                     android:text="Kilonuz:" />

                 <EditText
                     android:id="@+id/editText3"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignBottom="@+id/widget80"
                     android:layout_alignRight="@+id/textView1"
                     android:ems="10"
                     android:inputType="number" />
  
    </RelativeLayout>     
</RelativeLayout>